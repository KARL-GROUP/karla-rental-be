{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "ES2020",
         "DOM",
         "DOM.Iterable"
      ],
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "skipLibCheck": true,
      "sourceMap": true,
      "rootDir": "."
   }
}